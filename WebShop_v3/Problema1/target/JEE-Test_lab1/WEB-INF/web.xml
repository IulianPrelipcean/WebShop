<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>



  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>servlets.ReadProducts</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddProductMethod</servlet-name>
    <servlet-class>servlets.AddProduct</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddProductToChart</servlet-name>
    <servlet-class>servlets.AddProductToChart</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetShoppingCart</servlet-name>
    <servlet-class>servlets.ShoppingCart</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddProductMethod</servlet-name>
    <url-pattern>/addProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddProductToChart</servlet-name>
    <url-pattern>/add_product_to_chart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetShoppingCart</servlet-name>
    <url-pattern>/shopping_cart</url-pattern>
  </servlet-mapping>


</web-app>
